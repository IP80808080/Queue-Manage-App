            app:layout_constraintEnd_toEndOf="@+id/lod"
            app:layout_constraintStart_toStartOf="@+id/lod"
            app:layout_constraintTop_toBottomOf="@+id/lod" >

            <androidx.constraintlayout.widget.ConstraintLayout
